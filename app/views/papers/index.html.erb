<%= render partial: "nav" %>
<div class="content">
	<div id="papers">
	<%= render partial: "page" %>
	</div>
</div>

<%= javascript_include_tag 'jquery.infinitescroll' %>
<script>
$("#papers .page").infinitescroll({
    loading: {
      img:     "http://www.mytreedb.com/uploads/mytreedb/loader/ajax_loader_blue_48.gif",
      msgText: "loading..."
    },
    navSelector: "nav.pagination",
    nextSelector: "nav.pagination span.next  a[rel=next]",
    itemSelector: "#papers div.page" /* このDOMに差し掛かった時に、次のページのロードが始まる*/
});
</script>


